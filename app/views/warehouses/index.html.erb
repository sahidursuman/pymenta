<%- model_class = Warehouse -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%=t '.code', :default =>  t("helpers.labels.code") %></th>
      <th><%=t '.name', :default =>  t("helpers.labels.name") %></th>
	<th><%=t '.city', :default =>  t("helpers.labels.city") %></th>

      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
   <tbody>
    <% @warehouses.each do |warehouse| %>
      <tr>
        <td><%= link_to warehouse.code, warehouse_path(warehouse) %></td>
        <td><%= warehouse.name %></td>
        <td><%= warehouse.city %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_warehouse_path(warehouse), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      warehouse_path(warehouse),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_warehouse_path,
            :class => 'btn btn-primary' %>

